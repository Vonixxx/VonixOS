{
 "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
 "blocks": [
   {
    "alignment": "left",
    "segments": [
      {
        "leading_diamond": "",
        "type":            "os",
        "style":           "diamond",
        "background":      "#2E3440",
        "foreground":      "#ECEFF4",
        "template":        " {{ if .WSL }}WSL at {{ end }}{{.Icon}} "
      },
      {
        "powerline_symbol": "\ue0b0",
        "background":       "#B48EAD",
        "foreground":       "#000000",
        "properties": {
          "folder_icon":           "\uf115",
          "home_icon":             "\ueb06",
          "folder_separator_icon": " \ue0b1 ",
          "style":                 "agnoster"
        },
        "type":     "path",
        "style":    "powerline",
        "template": " {{ .Path }} "
      },
      {
        "type":             "git",
        "powerline_symbol": "\ue0b0",
        "background":       "#A3BE8C",
        "foreground":       "#000000",
        "style":            "powerline",
        "template":         " {{ .HEAD }} "
      },
      {
        "type":             "status",
        "powerline_symbol": "\ue0b0",
        "background":       "#BF616A",
        "foreground":       "#000000",
        "style":            "powerline",
        "template":         " {{ reason .Code }} "
      }
    ],
    "type": "prompt"
   }
 ],
 "final_space": true,
 "version": 2
}
